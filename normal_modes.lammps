# Species...
mass 1 2.83952169e-25
set type 1 charge 1.6021764599999998e-19
group 1 type 1

create_atoms 2 single -1.454484492019521e-07 3.2991912295153e-07 2.5e-05 units box

# Species...
mass 2 2.29154382e-25
set type 2 charge 1.6021764599999998e-19
group 2 type 2

timestep 4.201206739952918e-09

# Configuring additional output to flush buffer during simulation...
thermo 10000
thermo_style custom step cpu
thermo_modify flush yes

# Time integration...
group nonRigidBody union all
fix timeIntegrator nonRigidBody nve


# Pseudopotential approximation for Linear Paul trap... (fixID=6640788769456)

# SHO
variable k_x6640788769456		equal 1.047146e-10
variable k_y6640788769456		equal 1.047146e-10
